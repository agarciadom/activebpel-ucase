  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <outputDirectory>shared/lib</outputDirectory>
      <includes>
        <include>*:jar</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>webapps</outputDirectory>
      <includes><include>org.activebpel:rt.bpeladmin.war:*</include></includes>
      <outputFileNameMapping>BpelAdmin.war</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <outputDirectory>webapps</outputDirectory>
      <includes><include>org.activebpel:rt.bpeladmin.help.war:*</include></includes>
      <outputFileNameMapping>BpelAdminHelp.war</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <outputDirectory>webapps</outputDirectory>
      <includes><include>org.activebpel:rt.axis.bpel.web.war:*</include></includes>
      <outputFileNameMapping>active-bpel.war</outputFileNameMapping>
    </dependencySet>
  </dependencySets>
  <files>
    <file>
      <source>target/generated-sources/config/aeEngineConfig-Takuan.xml</source>
      <outputDirectory>bpr</outputDirectory>
      <destName>aeEngineConfig.xml</destName>
    </file>
    <file>
      <source>src/main/bash/ActiveBPEL.sh</source>
      <outputDirectory>bin</outputDirectory>
      <fileMode>755</fileMode>
    </file>
  </files>
