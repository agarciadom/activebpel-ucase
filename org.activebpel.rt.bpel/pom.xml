<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.activebpel</groupId>
    <artifactId>engine</artifactId>
    <version>4.1-uca11-SNAPSHOT</version>
  </parent>

  <artifactId>rt.bpel</artifactId>
  <version>4.1-uca11-SNAPSHOT</version>
  <packaging>jar</packaging>
  <name>ActiveBPEL::BPEL Runtime</name>

  <dependencies>
    <dependency>
      <groupId>org.activebpel</groupId>
      <artifactId>rt</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.activebpel</groupId>
      <artifactId>wsio</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>javax.activation</groupId>
      <artifactId>activation</artifactId>
      <version>1.0.2</version>
      <scope>runtime</scope>
    </dependency>

    <!-- Dynamo uses AspectJ and an ANTLR-based parser for WSCoL -->
    <dependency>
        <groupId>org.aspectj</groupId>
        <artifactId>aspectjrt</artifactId>
        <version>1.6.11</version>
    </dependency>

    <!-- Internal Dynamo libraries -->
    <dependency>
        <groupId>it.polimi</groupId>
        <artifactId>monitor-configurationmanager</artifactId>
        <version>${project.version}</version>
    </dependency>
    <dependency>
        <groupId>it.polimi</groupId>
        <artifactId>monitor-monitorlogger</artifactId>
        <version>${project.version}</version>
    </dependency>
    <dependency>
        <groupId>it.polimi</groupId>
        <artifactId>persistence</artifactId>
        <version>${project.version}</version>
    </dependency>
    <dependency>
        <groupId>antlr</groupId>
        <artifactId>antlr</artifactId>
        <version>2.7.7</version>
    </dependency>
  </dependencies>

  <build>
      <plugins>
          <plugin>
              <!-- Dynamo uses AOP to weave extra bits into the ActiveBPEL codebase -->
              <groupId>org.codehaus.mojo</groupId>
              <artifactId>aspectj-maven-plugin</artifactId>
              <version>1.4</version>
              <executions>
                  <execution>
                      <goals>
                          <goal>compile</goal>
                      </goals>
                  </execution>
              </executions>
          </plugin>
          <plugin>
	      <groupId>org.codehaus.mojo</groupId>
	      <artifactId>antlr-maven-plugin</artifactId>
              <version>2.2</version>
              <configuration>
                  <grammars>WSCoL_2.g</grammars>
              </configuration>
              <executions>
	          <execution>
	              <goals>
		          <goal>generate</goal>
	              </goals>
	          </execution>
	      </executions>
          </plugin>
      </plugins>
  </build>

</project>
