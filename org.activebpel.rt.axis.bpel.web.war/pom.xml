<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.activebpel</groupId>
    <artifactId>engine</artifactId>
    <version>4.1-uca2-SNAPSHOT</version>
  </parent>

  <artifactId>rt.axis.bpel.web.war</artifactId>
  <version>4.1-uca2-SNAPSHOT</version>
  <packaging>war</packaging>
  <name>ActiveBPEL::Server Web Service WAR</name>

  <properties>
    <jetty.version>7.1.5.v20100705</jetty.version>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.mortbay.jetty</groupId>
        <artifactId>jetty-maven-plugin</artifactId>
        <version>${jetty.version}</version>
        <configuration>
          <systemProperties>
            <!--
                See this thread for conflicts between Axis' classes
                and Sun's in JDK 6+:
                http://forums.sun.com/thread.jspa?threadID=5334141
            -->
            <systemProperty>
              <name>javax.xml.soap.MessageFactory</name>
              <value>org.apache.axis.soap.MessageFactoryImpl</value>
            </systemProperty>
          </systemProperties>
          <webAppConfig>
            <contextPath>/active-bpel</contextPath>
            <overrideDescriptor>
              src/test/webapp/WEB-INF/web-overrides.xml
            </overrideDescriptor>
          </webAppConfig>
          <loginServices>
            <loginService implementation="org.eclipse.jetty.security.HashLoginService"/>
          </loginServices>
        </configuration>
        <dependencies>
          <dependency>
            <groupId>org.eclipse.jetty</groupId>
            <artifactId>jetty-security</artifactId>
            <version>${jetty.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.activebpel</groupId>
      <artifactId>rt.axis.bpel.web</artifactId>
      <version>${project.version}</version>
      <scope>runtime</scope>
    </dependency>
  </dependencies>
</project>